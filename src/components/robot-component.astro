---
import { onMount } from 'svelte';

onMount(() => {
    window.addEventListener("scroll", function() {
        if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight) {
            document.getElementById("robot-container").classList.remove("hidden");
        } else {
            document.getElementById("robot-container").classList.add("hidden");
        }
    });
});
---

<div id="robot-container" class="hidden fixed bottom-4 right-4 z-50">
    <img src="/robot-preview.png" alt="Robot" id="robot-icon" class="w-16 h-16" />
    <button id="ask-openai" class="mt-2 px-4 py-2 bg-gray-700 text-white rounded-md hover:bg-gray-800 transition-transform duration-300 ease-in-out transform">
        Ask me!
    </button>
</div>
